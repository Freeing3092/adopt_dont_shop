<%= link_to "Start an Application", "/applications/new" %>

<h1>All pets</h1>

<%= form_with url: "/pets", method: :get, local: true do |f| %>
  <%= f.label :search %>
  <%= f.text_field :search %>
  <%= f.submit "Search" %>
<% end %>


<% @pets.each do |pet| %>
  <h3><%= pet.name %></h3>
  <p>Age: <%= pet.age %></p>
  <p>Breed: <%= pet.breed %></p>
  <p>Adoptable: <%= pet.adoptable %></p>
  <p>You can find <%= pet.name %> at <%= pet.shelter_name %>!</p>
  <%= button_to "Edit #{pet.name}", "/pets/#{pet.id}/edit", method: :patch %>
  <%= button_to "Delete #{pet.name}", "/pets/#{pet.id}", method: :delete %>
<% end %>
